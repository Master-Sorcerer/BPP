import os
import re
from pathlib import Path

#checking the file exist
path = Path('/var/log/apache2/access.log')
print (path.is_file())

#Gather the file locations
filenames = str(os.system(' find /var/log/apache2  -name \*.log'))
splitted = filenames.split("/")
print(filenames[0])
print(type(filenames))
print(type(splitted))
print(splitted[1])

